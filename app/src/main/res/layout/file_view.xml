<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/grid_item_corner"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/imageWithItem"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fd_Icon1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dp"></ImageView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fd_Icon1"
                android:text="@+id/TextView02"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/TextViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/TextViewDate"
                android:textSize="8dp">

            </TextView>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageWithItem"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:textSize="11dp"
        android:textStyle="bold">


    </TextView>

</RelativeLayout>
