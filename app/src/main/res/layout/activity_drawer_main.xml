<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E2F0F7">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rdGroup"
                android:layout_below="@+id/txtView">
                <RadioButton
                    android:id="@+id/rPhone"
                    android:layout_width="wrap_content"
                    android:textSize="8dp"
                    android:padding="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton
                    android:id="@+id/rSdCard"
                    android:layout_width="wrap_content"
                    android:textSize="8dp"
                    android:padding="0dp"
                    android:layout_height="wrap_content"
                    android:text="SdCard"
                    android:onClick="onRadioButtonClicked"/>

            </RadioGroup>



        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/header_title"
            android:layout_centerHorizontal="true"
            android:text="Header" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/leftNav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="#E2F0F7"
            android:orientation="vertical">


            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:itemIconPadding="0dp"
                app:itemIconSize="0dp"
                app:itemTextAppearance="@style/NavStyle"
                android:background="#E2F0F7"
                android:fitsSystemWindows="true"
                app:menu="@menu/activity_file_browser_drawer"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/filePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <GridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:numColumns="3" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>